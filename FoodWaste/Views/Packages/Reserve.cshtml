@model FoodWaste.WebApp.Models.ReserveModel

@{
    ViewData["Title"] = "Reserve";
}

<h1>Reserve</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reserve">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PickupDate" class="control-label"></label>
                <input asp-for="PickupDate" class="form-control" asp-format="{0:dd/MM/yyyyThh-mm}" />
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PackageId" value="@Model.PackageId" />
            <div class="form-group">
                <input type="submit" value="Reserve" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

